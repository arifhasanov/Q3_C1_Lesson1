@model Catalogue?

@{
    ViewData["Title"] = "Categories List";
}

@foreach (var cat in Model.Categories)
{
    <div>@cat.Id @cat.Name</div>
}

<form method="post">
    Id: <input type="text" name="Id" required/>
    <br />
    Name: <input type="text" name="Name"/>
    <br />
    <input type="submit" name="submit" value="Create"/>
</form>